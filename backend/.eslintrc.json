{
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-console": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "space-before-function-paren": ["error", { "anonymous": "never", "asyncArrow": "always", "named": "never" }],
        "linebreak-style": ["error", "unix"],
        "require-atomic-updates": "off"
    }
}
